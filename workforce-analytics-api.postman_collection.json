          }
        },
        {
          "name": "Get Skill by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/skills/1",
              "host": ["{{base_url}}"],
              "path": ["v1", "skills", "1"]
            }
          }
        }
      ]
    }
  ],
