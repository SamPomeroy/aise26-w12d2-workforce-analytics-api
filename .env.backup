# Application
APP_NAME="Workforce Analytics API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./workforce_analytics.db

# JWT Authentication
SECRET_KEY=super-secret-key-that-should-be-changed-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (Rate Limiting & Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# External API (Bureau of Labor Statistics)
BLS_API_KEY=
BLS_API_URL=https://api.bls.gov/publicAPI/v2/timeseries/data/

# Logging
LOG_LEVEL=INFO
```

